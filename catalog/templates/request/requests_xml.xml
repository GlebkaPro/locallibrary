{% load humanize %}

<requests>
  {% for request in requests %}
  <request>
    <Название>{{ request.title }}</Название>
    <Автор>{{ request.author }}</Автор>
    <Описание>{{ request.description }}</Описание>
    <ДатаИзменения>{{ request.date_creation|date:"Y-m-d" }}</ДатаИзменения>
    <Абонент>{{ request.borrower }}</Абонент>
    <Сотрудник>{{ request.worker }}</Сотрудник>
    <СтатусЗаявки>{{ request.get_status_record_display }}</СтатусЗаявки>
  </request>
  {% endfor %}
</requests>
